# ===================================================================
# TERRAFORM VARIABLES CONFIGURATION EXAMPLE
# ===================================================================
# Copy this file to terraform.tfvars and update with your values
# DO NOT commit terraform.tfvars to version control (contains sensitive data)
#
# Current Project Example: praxis-gear-483220-k4 (successfully deployed)
# ===================================================================

# ===================================================================
# PROJECT CONFIGURATION
# ===================================================================
project_id = "your-gcp-project-id"           # Replace with your GCP project ID
region     = "us-central1"                   # GCP region for resources
zone       = "us-central1-a"                 # GCP zone for VM instances

# ===================================================================
# ENVIRONMENT CONFIGURATION  
# ===================================================================
environment = "dev"                          # Environment name (dev/staging/prod)
subnet_cidr = "10.0.1.0/24"                 # VPC subnet CIDR range

# ===================================================================
# COMPUTE CONFIGURATION
# ===================================================================
machine_type = "e2-medium"                   # VM instance type (2 vCPUs, 4GB RAM)
vm_image     = "ubuntu-os-cloud/ubuntu-2204-lts"  # OS image for VM
disk_size    = 20                            # Boot disk size in GB

# ===================================================================
# SSH CONFIGURATION
# ===================================================================
ssh_user       = "ubuntu"                    # SSH username for VM access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-public-key-here"  # Your SSH public key

# ===================================================================
# WORKLOAD IDENTITY FEDERATION (WIF) CONFIGURATION
# ===================================================================
# For GitHub Actions integration (enterprise security best practice)
github_repository = "your-username/your-repo"  # GitHub repository for WIF
# Example: "surajkmr39-lang/GCP-Terraform"

# ===================================================================
# VM STARTUP SCRIPT (Optional)
# ===================================================================
startup_script = <<-EOF
#!/bin/bash
# Install essential tools
apt-get update
apt-get install -y docker.io git curl wget

# Configure Docker
systemctl start docker
systemctl enable docker
usermod -aG docker ubuntu

# Install Google Cloud SDK
curl https://sdk.cloud.google.com | bash
exec -l $SHELL

# Install additional development tools
apt-get install -y htop tree vim nano
EOF

